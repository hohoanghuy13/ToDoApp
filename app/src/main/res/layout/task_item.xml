<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="taskViewModel"
            type="com.example.todoapp.viewmodel.TaskViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvTask"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgTask"
                android:layout_marginStart="20dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/uploadimg"
                app:imageUrl="@{taskViewModel.task.image}"
                app:shapeAppearanceOverlay="@style/roundedImageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/tvTitle"
                android:text="@{taskViewModel.task.title}"
                android:textColor="@color/text_primary"
                android:layout_toEndOf="@+id/imgTask"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/tvLang"
                android:text="@{taskViewModel.task.Lang}"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="12dp"
                android:id="@+id/tvDescription"
                android:text="@{taskViewModel.task.description}"
                android:textSize="8sp"
                android:maxLines="0"
                android:textColor="@color/text_secondary"
                android:layout_toEndOf="@+id/imgTask"
                android:layout_below="@id/tvTitle"
                android:layout_marginStart="20dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>